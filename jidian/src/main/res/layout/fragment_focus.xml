    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.searchbox.ui.pullrefresh.PullToRefreshListView
            android:id="@+id/focus_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>